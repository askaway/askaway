.row.row-nogutter
  .col-sm-6.col-xs-12.col-question-up-vote.col-nogutter
    .question-up-vote
      %a(href="" ng-click="toggleVote()")
        %i.fa.fa-chevron-up(id="vote-for-{{question.id}}" ng-class="{'fa-chevron-up-voted': question.vote_id}")
      .question-up-vote-count {{question.votes_count}}

  .hidden-xs.col-asker-avatar.col-sm-6.col-nogutter
    = render 'question_asker_avatar'
