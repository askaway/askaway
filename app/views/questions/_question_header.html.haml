- on_answer_page ||= false
.box-inner
  - if question_header.is_anonymous?
    %h4 Anonymous question for the mayoral candidates:
  - else
    %h4
      = "#{question_header.first_name.titleize}'s question for the mayoral candidates:"
  %h3.salmon-text= question_header.body
  %p.muted= asked_by(question_header)
  .inline-block.light.CTA-vote
    - unless on_answer_page
      %span.vote-count.label.label-info #{question_header.likes_count} votes
    - if question_header.needs_voting_reminder?
      =link_to "Vote for this question", vote_for_question_path(question_header), :class => "btn", :data => { :action => "vote" }
