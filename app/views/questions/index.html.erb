<% content_for :title, "Ask Away - Questions" %>
<% content_for :description, "Search and browse for questions posted to AskAway" %>
<div>
  <div class="container">
    <div class="placeholder"></div>
    <div class="row-fluid">
    <%= link_to "Ask a Question", new_question_path, class: "btn btn-ask btn-large span3 pull-right" %>
    </div>
    <div class="all-questions">
      <div class="row-fluid">
        <div class="navbar navbar-inverse">
          <div class="navbar-inner">
            <div class="container">
              <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".search-menu">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="brand">Sort questions by:</a>
              <div class="nav-collapse collapse search-menu">
                <ul class="nav">
                  <li class="<%= ('answered' == @filter) ? 'active' : ''%>"><a href="?filter=answered">Answered</a></li>
                  <li class="<%= ('top' == @filter) ? 'active' : ''%>"><a href="?filter=top">Popular Unanswered</a></li>
                  <li class="<%= ('all' == @filter) ? 'active' : ''%>"><a href="?filter=all">All</a></li>
                </ul>
                <form class="navbar-search pull-right">
                  <%= hidden_field_tag :filter, params[:filter] %>
                  <%= search_field_tag :q, params[:q], class: "search-query", placeholder: "Search" %>
                    <button type="submit" class="btn">Go</button>
                </form>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>
      </div>
      <% if @questions.length > 0 %>
        <div class="box">
          <%= render partial: 'question', collection: @questions %>
        </div>
      </div>
        <%= paginate @questions %>
      <% else %>
        <div class="inline-message">
          <p>
            Wowee! You have found something that nobody has asked yet, why don't you ask it?
          </p>
        </div>
      <% end %>
    </div>
    <div class="placeholder"></div><div class="placeholder"></div>
  </div>
</div>
</div>




